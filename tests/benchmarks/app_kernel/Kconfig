# Minimize timer interrupts during the benchmark. Without
# overflowing timer calculations (e.g. Cortex-M 24bit systick).
config SYS_CLOCK_TICKS_PER_SEC
	default 1000 if CORTEX_M_SYSTICK && SYS_CLOCK_HW_CYCLES_PER_SEC > 800000000
	default 100  if CORTEX_M_SYSTICK && SYS_CLOCK_HW_CYCLES_PER_SEC > 80000000
	default 10   if CORTEX_M_SYSTICK && SYS_CLOCK_HW_CYCLES_PER_SEC > 8000000
	default 1

source "Kconfig.zephyr"
